    "world_clock/index.html": "<!DOCTYPE html>\r\n<html lang=\"en\">\r\n<head>\r\n    <meta charset=\"UTF-8\">\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\r\n    <title>Hacker World Clock</title>\r\n    <link href=\"https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap\" rel=\"stylesheet\">\r\n    <style>\r\n        :root {\r\n            --bg-color: #0d0d0d;\r\n            --neon-green: #00ff41;\r\n            --neon-dim: #008f11;\r\n            --text-color: #e0e0e0;\r\n        }\r\n        body {\r\n            margin: 0;\r\n            padding: 20px;\r\n            background-color: var(--bg-color);\r\n            color: var(--neon-green);\r\n            font-family: 'Share Tech Mono', monospace;\r\n            height: 100vh;\r\n            display: flex;\r\n            flex-direction: column;\r\n            overflow: hidden;\r\n        }\r\n        .title-bar {\r\n            text-align: center;\r\n            font-size: 1.2rem;\r\n            letter-spacing: 4px;\r\n            text-transform: uppercase;\r\n            margin-bottom: 20px;\r\n            text-shadow: 0 0 10px var(--neon-green);\r\n            flex-shrink: 0;\r\n        }\r\n        .clock-grid {\r\n            display: grid;\r\n            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));\r\n            gap: 20px;\r\n            width: 100%;\r\n            flex: 1;\r\n            align-content: center;\r\n            justify-items: center;\r\n        }\r\n        .clock-container {\r\n            display: flex;\r\n            flex-direction: column;\r\n            align-items: center;\r\n            width: 180px;\r\n        }\r\n        canvas {\r\n            filter: drop-shadow(0 0 5px var(--neon-green));\r\n        }\r\n        .city-label {\r\n            margin-top: 10px;\r\n            font-size: 1rem;\r\n            color: var(--neon-green);\r\n            text-transform: uppercase;\r\n            letter-spacing: 2px;\r\n        }\r\n        .time-digital {\r\n            font-size: 0.9rem;\r\n            color: var(--neon-dim);\r\n            margin-top: 5px;\r\n        }\r\n    </style>\r\n</head>\r\n<body>\r\n\r\n    <div class=\"title-bar\">/// GLOBAL_OPS_SYNC ///</div>\r\n\r\n    <div class=\"clock-grid\" id=\"clockGrid\">\r\n        </div>\r\n\r\n    <script>\r\n        const ZONES = [\r\n            { city: 'New York', tz: 'America/New_York' },\r\n            { city: 'London', tz: 'Europe/London' },\r\n            { city: 'Berlin', tz: 'Europe/Berlin' },\r\n            { city: 'Jakarta', tz: 'Asia/Jakarta' },\r\n            { city: 'Tokyo', tz: 'Asia/Tokyo' }\r\n        ];\r\n\r\n        function createClock(zone, index) {\r\n            const container = document.createElement('div');\r\n            container.className = 'clock-container';\r\n\r\n            const canvas = document.createElement('canvas');\r\n            canvas.width = 160;\r\n            canvas.height = 160;\r\n            canvas.id = `canvas-${index}`;\r\n\r\n            const label = document.createElement('div');\r\n            label.className = 'city-label';\r\n            label.innerText = zone.city;\r\n\r\n            const digital = document.createElement('div');\r\n            digital.className = 'time-digital';\r\n            digital.id = `digital-${index}`;\r\n            digital.innerText = \"--:--\";\r\n\r\n            container.appendChild(canvas);\r\n            container.appendChild(label);\r\n            container.appendChild(digital);\r\n            document.getElementById('clockGrid').appendChild(container);\r\n\r\n            return { canvas, ctx: canvas.getContext('2d'), zone: zone.tz, digitalEl: digital };\r\n        }\r\n\r\n        const clocks = ZONES.map((zone, i) => createClock(zone, i));\r\n\r\n        function drawClock(clock) {\r\n            const ctx = clock.ctx;\r\n            const now = new Date();\r\n            // Convert to target timezone\r\n            const timeString = now.toLocaleString('en-US', { timeZone: clock.zone });\r\n            const targetTime = new Date(timeString);\r\n\r\n            const hours = targetTime.getHours();\r\n            const minutes = targetTime.getMinutes();\r\n            const seconds = targetTime.getSeconds();\r\n            const milliseconds = targetTime.getMilliseconds();\r\n\r\n            // Smooth seconds\r\n            const smoothSec = seconds + (milliseconds / 1000);\r\n            const smoothMin = minutes + (smoothSec / 60);\r\n            const smoothHour = hours + (smoothMin / 60);\r\n\r\n            // Update Digital\r\n            clock.digitalEl.innerText = targetTime.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' });\r\n\r\n            // Clear\r\n            ctx.clearRect(0, 0, 160, 160);\r\n            const cx = 80;\r\n            const cy = 80;\r\n\r\n            // --- 1. Outer Rotating Ring (Hacker Effect) ---\r\n            ctx.save();\r\n            ctx.translate(cx, cy);\r\n            ctx.rotate(Date.now() / 1000 * 0.5); // Slow rotation\r\n            ctx.strokeStyle = '#008f11';\r\n            ctx.lineWidth = 2;\r\n            ctx.setLineDash([10, 10]); // Dashed line\r\n            ctx.beginPath();\r\n            ctx.arc(0, 0, 75, 0, Math.PI * 2);\r\n            ctx.stroke();\r\n            ctx.restore();\r\n\r\n            // --- 2. Inner Static Ring ---\r\n            ctx.beginPath();\r\n            ctx.arc(cx, cy, 65, 0, Math.PI * 2);\r\n            ctx.strokeStyle = '#00ff41';\r\n            ctx.lineWidth = 1;\r\n            ctx.stroke();\r\n\r\n            // --- 3. Tick Marks ---\r\n            for (let i = 0; i < 12; i++) {\r\n                const angle = (i * 30) * Math.PI / 180;\r\n                const x1 = cx + Math.cos(angle) * 55;\r\n                const y1 = cy + Math.sin(angle) * 55;\r\n                const x2 = cx + Math.cos(angle) * 62;\r\n                const y2 = cy + Math.sin(angle) * 62;\r\n                ctx.beginPath();\r\n                ctx.moveTo(x1, y1);\r\n                ctx.lineTo(x2, y2);\r\n                ctx.strokeStyle = '#00ff41';\r\n                ctx.lineWidth = 2;\r\n                ctx.stroke();\r\n            }\r\n\r\n            // --- 4. Hands ---\r\n            // Hour\r\n            const hAngle = (smoothHour * 30 - 90) * Math.PI / 180;\r\n            drawHand(ctx, cx, cy, hAngle, 35, 4, '#00ff41');\r\n\r\n            // Minute\r\n            const mAngle = (smoothMin * 6 - 90) * Math.PI / 180;\r\n            drawHand(ctx, cx, cy, mAngle, 50, 3, '#00ff41');\r\n\r\n            // Second (Red/Distinct)\r\n            const sAngle = (smoothSec * 6 - 90) * Math.PI / 180;\r\n            drawHand(ctx, cx, cy, sAngle, 55, 1, '#fff');\r\n\r\n            // Center Dot\r\n            ctx.beginPath();\r\n            ctx.arc(cx, cy, 3, 0, Math.PI * 2);\r\n            ctx.fillStyle = '#fff';\r\n            ctx.fill();\r\n        }\r\n\r\n        function drawHand(ctx, x, y, angle, length, width, color) {\r\n            const x2 = x + Math.cos(angle) * length;\r\n            const y2 = y + Math.sin(angle) * length;\r\n            ctx.beginPath();\r\n            ctx.moveTo(x, y);\r\n            ctx.lineTo(x2, y2);\r\n            ctx.strokeStyle = color;\r\n            ctx.lineWidth = width;\r\n            ctx.lineCap = 'round';\r\n            ctx.stroke();\r\n        }\r\n\r\n        function animate() {\r\n            clocks.forEach(drawClock);\r\n            requestAnimationFrame(animate);\r\n        }\r\n\r\n        animate();\r\n    </script>\r\n</body>\r\n</html>",
